<h1>Band:<%=@band.band_name%></h1>

<h3>Update <%=@band.band_name() %> </h3>

<form action="/band_update/ <%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="band_name">Change Band's Name:</label>
  <input id="band_name" name="band_name" type="text">

  <button type="submit" class="btn btn-info">Update Band</button>
</form>

<h3>Delete <%=@band.band_name() %> </h3>

<form action='/band_delete/<%=@band.id()%>' method='post'>
  <input name="_method" type="hidden" value='delete'>
  <button type='submit' class='btn btn-info'>Delete Band</button>
</form>


<h3>The venues are:</h3>

<% if @band.venues.any?() %>
  <% @band.venues.each() do |venue| %>
    <ul>
      <li><a href='/venue/<%=venue.id %>'><%=venue.venue_name() %></a></li>
    </ul>
  <%end%>
  <%else%>
    <p>You have no venues attached to this !</p>
  <%end%>

  <h3>Add a Venue to the Band:</h3>

  <form action='/band_venue_add/' method='post'>
    <input type='hidden' name='band_id'  value=<%= @band.id %>
    <label for='venue_name'>Add a venue:</label>
    <input id='venue_name' name='venue_name' type='text'>
    <button type='submit' class='btn btn-info'>Add Venue</button>
  </form>

  <p><a href='/'>Go to index page</a></p>
